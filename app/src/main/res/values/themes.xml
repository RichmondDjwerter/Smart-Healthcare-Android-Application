<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ModernizedShapp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Menu style. -->
    <style name="NavigationTheme">

        <!-- color of text/icon when selected. -->
        <item name="colorOnPrimary">@color/sky</item>
        <!-- Background color when selected. -->
        <item name="colorControlHighlight">@color/black</item>
        <item name="routeColor">@color/blue_dark</item>
        <item name="routeModerateCongestionColor">@color/gold</item>
        <item name="routeSevereCongestionColor">@color/mapbox_navigation_route_layer_congestion_yellow</item>
        <item name="routeShieldColor">@color/mapbox_navigation_route_alternative_shield_color</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>